{
	"name": "cs2d-lua",
	"displayName": "CS2D Lua",
	"publisher": "MamiTomoe",
	"icon": "images/icon.png",
	"description": "Enhance your CS2D Lua scripting with stubs, documentation, and function definitions for better code completion and understanding, streamlining your development process.",
	"version": "0.1.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mami-Tomoe/cs2d-lua"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Education"
	],
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cs2d-lua.selectFramework",
				"title": "Select Framework",
				"category": "CS2D Lua"
			}
		],
		"configuration": {
			"type": "object",
			"title": "CS2D Lua",
			"properties": {
				"cs2d-lua.framework": {
					"type": "string",
					"default": "None",
					"description": "Choose the framework used for CS2D Lua scripting.",
					"enum": [
						"None"
					]
				}
			}
		},
		"languages": [
			{
				"id": "lua",
				"aliases": [
					"Lua"
				],
				"extensions": [
					".lua"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"extensionDependencies": [
		"Sumneko.lua"
	],
	"devDependencies": {
		"@types/vscode": "^1.96.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"eslint": "^9.16.0",
		"typescript": "^5.7.2",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	},
	"files": [
		"out/**/*.js"
	]
}
